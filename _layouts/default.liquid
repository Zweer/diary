<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

        <link rel="icon" href="{{ "/assets/img/favicon.svg" | relative_url }}" type="image/svg+xml">

        <link rel="stylesheet" href="{{ "/assets/css/main.css" | relative_url }}">
        <link rel="stylesheet" href="{{ "/assets/css/syntax.css" | relative_url }}">

        <script src="https://kit.fontawesome.com/c0a5510d86.js" crossorigin="anonymous"></script>

        <title>{{ page.title}}</title>
    </head>

    <body>
        {% include header.liquid %}

        <div class="content">
            <div class="paper paper-before" id="paper-before"></div>
            <div class="paper paper-article">
                <!-- Calendar toggle button -->
                {% unless page.home %}
                <button id="calendar-open-btn" class="calendar-toggle-btn" title="Open calendar">
                    <i class="fa-regular fa-calendar"></i>
                </button>
                {% endunless %}

                <!--Calendar body-->
                {% include calendar.liquid %}

                <!--Article body-->
                <article class="typo">
                    {{ content }}
                </article>
            </div>
        </div>

        {% include footer.liquid %}

        <script type="text/javascript" src="{{ "/assets/js/calendar-simple.js" | relative_url }}"></script>
    </body>
</html>
