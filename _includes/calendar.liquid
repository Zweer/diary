    tags: [],
    title: string; // "Ma quanto sei bella!",
    url: string; // "/2023/07/06/che-bella"
  }
  {% endcomment %}

  const posts = [
    {% for post in site.posts %}
    {
      categories: {{ post.categories | jsonify }},
      category: {{ post.category | jsonify }},
      collection: {{ post.collection | jsonify }},
      date: {{ post.date | jsonify }},
      draft: {{ post.draft | jsonify }},
      excerpt: {{ post.excerpt | jsonify }},
      ext: {{ post.ext | jsonify }},
      id: {{ post.id | jsonify }},
      index: {{ forloop.rindex0 | jsonify }},
      layout: {{ post.layout | jsonify }},
      path: {{ post.path | jsonify }},
      relative_path: {{ post.relative_path | jsonify }},
      slug: {{ post.slug | jsonify }},
      tags: {{ post.tags | jsonify }},
      title: {{ post.title | jsonify }},
      url: {{ post.url | relative_url | jsonify }},
    },
    {% endfor %}
  ];
  const activePost = {% if page.id %}{{ page.id | jsonify }}{% else %}null{% endif %};

