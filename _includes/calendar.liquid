  {
    categories: string[];
    category: string;
    collection: string; // "posts"
    content: string;
    date: string; // "2023-07-06 00:00:00 +0200",
    draft: boolean;
    excerpt: string;
    ext: string; // ".md",
    id: string; // "/2023/07/06/che-bella",
    layout: string; // "post",
    next?: null,
    output: string;
    path: string; // "_posts/2023-07-06-che-bella.md",
    previous?: null,
    relative_path: string; // "_posts/2023-07-06-che-bella.md",
